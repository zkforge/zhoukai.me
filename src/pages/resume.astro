---
// Note: This file is excluded from TypeScript checking in tsconfig.json
// due to Astro template parsing limitations. Be careful when modifying!
import Layout from "@/layouts/Layout.astro";
import BackButton from "@/components/BackButton.astro";
import { SITE } from "@/config";

// SEO 配置
const title = `Resume | ${SITE.title}`;
const description = "Kai Zhou's Resume - 个人简历";
---

<Layout title={title} description={description}>
  <div class="resume-container">
    <BackButton />

    <!-- PDF 容器 -->
    <div class="pdf-wrapper">
      <!-- 加载动画 -->
      <div class="loading-spinner" id="loading-spinner">
        <div class="spinner"></div>
        <p>加载简历中...</p>
      </div>

      <!-- 桌面端：iframe 嵌入 -->
      <div class="pdf-viewer-desktop">
        <iframe
          src="/resume.pdf#view=fitH"
          class="pdf-iframe"
          title="Kai Zhou's Resume"
          onload="this.parentElement.previousElementSibling.style.display='none'"
        >
          <!-- 降级方案 -->
          <object
            data="/resume.pdf"
            type="application/pdf"
            class="pdf-object"
          >
            <div class="pdf-fallback">
              <p class="fallback-text">
                您的浏览器不支持 PDF 内嵌查看
              </p>
              <a href="/resume.pdf" download class="download-button">
                下载 PDF 简历
              </a>
            </div>
          </object>
        </iframe>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* 容器样式 */
  .resume-container {
    margin-left: auto;
    margin-right: auto;
    width: 100%;
    max-width: 56rem; /* max-w-4xl */
    padding-left: 1rem;
    padding-right: 1rem;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }

  /* PDF 包装器 */
  .pdf-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 210 / 297;
    min-height: 80vh;
    max-height: 90vh;
  }

  /* 加载动画 */
  .loading-spinner {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: var(--background);
    z-index: 10;
  }

  .spinner {
    width: 3rem;
    height: 3rem;
    border-width: 4px;
    border-style: solid;
    border-radius: 9999px;
    border-color: var(--muted);
    border-top-color: var(--accent);
    animation: spin 1s linear infinite;
  }

  .loading-spinner p {
    margin-top: 1rem;
    font-size: 0.875rem;
    color: var(--foreground);
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* 桌面端 PDF 查看器 */
  .pdf-viewer-desktop {
    width: 100%;
    height: 100%;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    border: 1px solid var(--border);
  }

  .pdf-iframe {
    width: 100%;
    height: 100%;
    border: 0;
  }

  .pdf-object {
    width: 100%;
    height: 100%;
    border: 0;
  }

  /* 降级方案 */
  .pdf-fallback {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    padding: 2rem;
    text-align: center;
    background: var(--background);
  }

  .fallback-text {
    font-size: 1rem;
    margin-bottom: 1rem;
    color: var(--foreground);
  }

  .download-button {
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
    border-radius: 0.5rem;
    font-weight: 500;
    text-align: center;
    transition: all 0.2s;
    background: var(--accent);
    color: var(--background);
  }

  .download-button:hover {
    opacity: 0.9;
  }

  /* 响应式设计 */
  @media (max-width: 767px) {
    .pdf-wrapper {
      aspect-ratio: auto;
      height: auto;
    }
  }

  /* 竖屏模式：增加高度限制 */
  @media (max-width: 767px) and (orientation: portrait) {
    .pdf-wrapper {
      min-height: 90dvh;
      max-height: 95dvh;
    }

    .resume-container {
      padding-top: 1rem;
      padding-bottom: 1rem;
    }
  }

  /* 打印样式 */
  @media print {
    :global(.back-button-container) {
      display: none !important;
    }

    .pdf-wrapper {
      max-width: none;
      aspect-ratio: auto;
      max-height: none;
    }

    .pdf-iframe {
      height: auto;
      min-height: 100vh;
    }

    .loading-spinner {
      display: none !important;
    }
  }
</style>

<script>
  // 设置超时移除加载动画，避免一直显示
  setTimeout(() => {
    const spinner = document.getElementById("loading-spinner");
    if (spinner) {
      spinner.style.display = "none";
    }
  }, 3000);
</script>
