            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 50px 20px;
            margin: 0;
        }

        .container {
            width: 100%;
            max-width: 800px;
            background: var(--color-card-bg);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 40px 45px;
            transition: var(--transition);
        }

        .container:hover {
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        /* 头部样式 */
        .header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 20px;
        }

        .name {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 10px;
            color: var(--color-text-primary);
        }

        .title {
            font-size: 18px;
            color: var(--color-text-secondary);
            margin-bottom: 20px;
            font-weight: 500;
        }

        .contact {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            font-size: 14px;
        }

        .contact span {
            color: var(--color-text-secondary);
        }

        .contact a {
            color: var(--color-link);
            text-decoration: none;
            transition: var(--transition);
            font-weight: 500;
        }

        .contact a:hover {
            color: var(--color-primary);
            text-decoration: underline;
        }

        /* 章节样式 */
        .section {
            margin-bottom: 35px;
        }

        .section-title {
            font-size: 20px;
            font-weight: bold;
            color: var(--color-secondary);
            margin-bottom: 20px;
        }

        .subsection {
            margin-bottom: 25px;
        }

        .subsection-title {
            font-size: 16px;
            font-weight: bold;
            color: var(--color-text-primary);
            margin-bottom: 8px;
        }

        .company {
            color: var(--color-text-secondary);
            font-weight: 500;
        }

        .duration {
            color: var(--color-text-secondary);
            font-size: 14px;
            margin-left: 10px;
        }

        .content {
            margin-left: 0;
